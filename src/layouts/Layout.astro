---
interface Props {
	title: string;
    description?: string;
}

const { title, description = "Osobn√≠ web Josef√≠ny Povej≈°ilov√© - Blog, Recepty a Projekty" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#e11d48" />
		<title>{title}</title>
	</head>
	<body class="bg-stone-50 text-stone-800 font-sans antialiased">
        <header class="bg-white shadow-sm sticky top-0 z-50">
            <nav class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
                <a href={`${base}`} class="text-2xl font-bold text-pink-600 hover:text-pink-700 transition" aria-label="Dom≈Ø">Pepioli üêæ</a>
                <div class="space-x-6 hidden md:flex" role="navigation" aria-label="Hlavn√≠ navigace">
                    <a href={`${base}blog`} class="hover:text-pink-600 transition">Blog</a>
                    <a href={`${base}recepty`} class="hover:text-pink-600 transition">Recepty</a>
                    <a href={`${base}projekty`} class="hover:text-pink-600 transition">Projekty</a>
                </div>
                <!-- Mobile menu button -->
                <button 
                    id="mobile-menu-btn" 
                    class="md:hidden text-stone-600 p-2 rounded-lg hover:bg-stone-100 transition focus:outline-none focus:ring-2 focus:ring-pink-500"
                    aria-label="Otev≈ô√≠t menu"
                    aria-expanded="false"
                    aria-controls="mobile-menu"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </nav>
            <!-- Mobile menu panel -->
            <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-stone-100 px-4 pb-4" role="navigation" aria-label="Mobiln√≠ navigace">
                <a href={`${base}blog`} class="block py-3 text-stone-700 hover:text-pink-600 transition border-b border-stone-50 focus:outline-none focus:text-pink-600">Blog</a>
                <a href={`${base}recepty`} class="block py-3 text-stone-700 hover:text-pink-600 transition border-b border-stone-50 focus:outline-none focus:text-pink-600">Recepty</a>
                <a href={`${base}projekty`} class="block py-3 text-stone-700 hover:text-pink-600 transition focus:outline-none focus:text-pink-600">Projekty</a>
            </div>
        </header>
		<main class="max-w-4xl mx-auto px-4 md:px-6 py-8 md:py-12 min-h-screen" role="main">
			<slot />
		</main>
        <footer class="bg-stone-100 py-8 md:py-12 mt-16" role="contentinfo">
            <div class="max-w-4xl mx-auto px-4 text-center text-stone-500 text-sm">
                <p>&copy; {new Date().getFullYear()} Josef√≠na Povej≈°ilov√°. V≈°echna pr√°va vyhrazena.</p>
                <p class="mt-4">
                    <a href="https://www.kamdu.cz/blog/" target="_blank" rel="noopener noreferrer" class="text-pink-600 hover:underline">
                        M√© ƒçl√°nky na Kamdu.cz
                    </a>
                </p>
                <p class="mt-2 text-xs text-stone-400">
                    <a href={`${base}admin`} class="hover:text-pink-600 transition focus:outline-none focus:text-pink-600">Administrace</a>
                </p>
            </div>
        </footer>
        <script>
            // Mobile menu toggle
            const menuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            
            menuBtn?.addEventListener('click', () => {
                const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
                menuBtn.setAttribute('aria-expanded', String(!isExpanded));
                mobileMenu?.classList.toggle('hidden');
            });
        </script>
	</body>
</html>
