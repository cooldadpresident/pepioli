---
interface Props {
	title: string;
    description?: string;
}

const { title, description = "Osobní web Josefíny Povejšilové - Blog, Recepty a Projekty" } = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-stone-50 text-stone-800 font-sans antialiased">
        <header class="bg-white shadow-sm sticky top-0 z-50">
            <nav class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
                <a href="/" class="text-2xl font-bold text-rose-600 hover:text-rose-700 transition">Pepioli</a>
                <div class="space-x-6 hidden md:block">
                    <a href="/blog" class="hover:text-rose-600 transition">Blog</a>
                    <a href="/recepty" class="hover:text-rose-600 transition">Recepty</a>
                    <a href="/projekty" class="hover:text-rose-600 transition">Projekty</a>
                </div>
                <!-- Mobile menu button placeholder -->
                <button class="md:hidden text-stone-600">Menu</button>
            </nav>
        </header>
		<main class="max-w-4xl mx-auto px-4 py-8 min-h-screen">
			<slot />
		</main>
        <footer class="bg-stone-100 py-8 mt-12">
            <div class="max-w-4xl mx-auto px-4 text-center text-stone-500 text-sm">
                &copy; {new Date().getFullYear()} Josefína Povejšilová. Všechna práva vyhrazena.
            </div>
        </footer>
	</body>
</html>
