---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const recipes = (await getCollection('recipes')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Recepty - Pepioli">
    <h1 class="text-3xl md:text-4xl font-bold mb-2">üç≥ Recepty</h1>
    <p class="mb-8 md:mb-12 text-stone-600">M√© obl√≠ben√© recepty, kter√© r√°da va≈ô√≠m pro rodinu a p≈ô√°tele.</p>

    <div class="grid md:grid-cols-2 gap-6 md:gap-8">
        {recipes.map((recipe) => (
            <article class="bg-white rounded-xl shadow-sm border border-stone-100 overflow-hidden hover:shadow-md transition flex flex-col h-full group">
                <div class="h-48 bg-gradient-to-br from-pink-100 to-stone-100 flex items-center justify-center text-stone-400 overflow-hidden">
                    {recipe.data.image ? (
                        <img src={recipe.data.image} alt={recipe.data.title} class="w-full h-full object-cover group-hover:scale-105 transition duration-300" loading="lazy" />
                    ) : (
                        <span class="text-5xl">üçΩÔ∏è</span>
                    )}
                </div>
                <div class="p-6 flex flex-col flex-grow">
                    <h2 class="text-xl font-bold mb-2 text-stone-800 group-hover:text-pink-600 transition">{recipe.data.title}</h2>
                    <p class="text-stone-600 text-sm mb-4 flex-grow">{recipe.data.description}</p>
                    <a href={`${base}recepty/${recipe.slug}/`} class="text-pink-600 font-medium hover:underline mt-auto focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 rounded">Zobrazit recept &rarr;</a>
                </div>
            </article>
        ))}
    </div>
</Layout>
