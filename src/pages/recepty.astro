---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const recipes = (await getCollection('recipes')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Recepty - Pepioli">
    <h1 class="text-3xl font-bold mb-8">Recepty</h1>
    <p class="mb-8 text-stone-600">Mé oblíbené recepty, které ráda vařím pro rodinu a přátele.</p>

    <div class="grid md:grid-cols-2 gap-6">
        {recipes.map((recipe) => (
            <div class="bg-white rounded-xl shadow-sm border border-stone-100 overflow-hidden hover:shadow-md transition flex flex-col h-full">
                <div class="h-48 bg-stone-200 flex items-center justify-center text-stone-400 overflow-hidden">
                    {recipe.data.image ? (
                        <img src={recipe.data.image} alt={recipe.data.title} class="w-full h-full object-cover" />
                    ) : (
                        <span>Fotografie jídla</span>
                    )}
                </div>
                <div class="p-6 flex flex-col flex-grow">
                    <h2 class="text-xl font-bold mb-2 text-stone-800">{recipe.data.title}</h2>
                    <p class="text-stone-600 text-sm mb-4 flex-grow">{recipe.data.description}</p>
                    <a href={`/recepty/${recipe.slug}/`} class="text-rose-600 font-medium hover:underline mt-auto">Zobrazit recept &rarr;</a>
                </div>
            </div>
        ))}
    </div>
</Layout>
